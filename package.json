{
  "name": "patternplate-transform-react-to-markup",
  "version": "1.0.0",
  "description": "patternplate transform creating markup from react components",
  "main": "distribution/index.js",
  "files": [
    "distribution"
  ],
  "scripts": {
    "start": "npm run watch",
    "clean": "rm -rf distribution",
    "prepare": "mkdir -p distribution",
    "prebuild": "parallelshell 'npm run test' 'npm run clean && npm run prepare'",
    "build": "babel source --out-dir distribution",
    "pretest": "eslint source/**/*.js",
    "test": "ava",
    "lint": "dependency-check . --missing && dependency-check . --extra --no-dev",
    "watch": "npm run test -- --watch",
    "commit": "git-cz",
    "commitmsg": "conventional-changelog-lint -e",
    "changelog": "conventional-changelog --preset angular --infile changelog.md --same-file --output-unreleased",
    "push": "git push && git push --tags && hub release create \"v$npm_package_version\" --message=\"v$npm_package_version\n$(conventional-changelog -p angular)\" && npm publish",
    "release": "npm version $(conventional-recommended-bump -p angular)",
    "preversion": "npm run build && npm test",
    "version": "npm run changelog && git add . && echo \"$(conventional-changelog -p angular)\"",
    "postversion": "git tag -d v$npm_package_version && git commit --amend -m \"chore(release): $npm_package_version\n$(conventional-changelog -p angular)\" && git tag -a v$npm_package_version -m \"$(conventional-changelog -p angular)\""
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-lint"
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sinnerschrader/patternplate-transform-react.git"
  },
  "bugs": {
    "url": "https://github.com/sinnerschrader/patternplate-transform-react/issues"
  },
  "homepage": "https://github.com/sinnerschrader/patternplate-transform-react#readme",
  "keywords": [
    "react",
    "patternplate",
    "transform",
    "pattern"
  ],
  "author": {
    "name": "SinnerSchrader Deutschland GmbH",
    "email": "jobs@sinnerschrader.com"
  },
  "contributors": [
    {
      "name": "Mario Nebl",
      "email": "mario.nebl@sinnerschrader.com"
    },
    {
      "name": "Markus Wolf",
      "email": "markus.wolf@sinnerschrader.com"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "ava": "0.16.0",
    "babel-cli": "6.4.0",
    "babel-eslint": "4.1.8",
    "babel-plugin-add-module-exports": "0.1.2",
    "babel-preset-es2015-node4": "2.0.3",
    "babel-preset-stage-0": "6.3.13",
    "babel-register": "6.14.0",
    "commitizen": "2.7.3",
    "conventional-changelog-cli": "1.1.1",
    "conventional-changelog-lint": "0.3.2",
    "conventional-recommended-bump": "0.1.0",
    "cz-conventional-changelog": "1.1.5",
    "cz-conventional-changelog-lint": "0.1.3",
    "dependency-check": "2.6.0",
    "eslint": "1.10.3",
    "eslint-config-xo": "0.9.1",
    "eslint-plugin-babel": "3.1.0",
    "husky": "0.11.8",
    "jsonlint-cli": "1.0.1",
    "parallelshell": "2.0.0",
    "react": "15.3.1",
    "react-dom": "15.3.1",
    "unexpected": "10.18.1"
  },
  "peerDependencies": {
    "react": ">= 0.13",
    "react-dom": ">= 0.13"
  },
  "dependencies": {
    "chalk": "1.1.3",
    "compare-semver": "1.1.0",
    "lodash": "4.16.1",
    "resolve": "1.1.7",
    "stack-trace": "0.0.9",
    "try-require": "1.2.1"
  }
}
